<div class="card card-body">
  <div class="row d-flex align-items-center">
    <div class="profile-avatar col-2 mx-4">
      <img src="{{#unless otherUser.image}}https://www.kindpng.com/picc/b/130/1300240.png{{/unless}}{{ otherUser.image }}" alt="" class="border rounded-circle mx-auto"
        style="width: 150px; height: 150px;">
    </div>
    <div class="profile-info col-4 ml-4">
      <h1>{{ otherUser.name }}</h1>
      <div>{{ otherUser.email }}</div>
      {{#if isIdOwner}}
      <a href="/users/{{ user.id }}/edit" class="btn btn-primary mt-5 px-5">Edit</a>
      {{/if}}
    </div>
    <div class="profile-activity col-4">
      <div class="d-flex align-items-center">
        <span class="badge badge-secondary font-weight-bold mr-1">{{ commentCounter }}</span> 已評論餐廳
      </div>
    </div>
  </div>
</div>

<div class="card mt-3" style="height: 10rem">
  <div class="card-header font-weight-bold d-flex align-items-center">
    <span class="badge badge-secondary font-weight-bold mr-1">{{ commentCounter }}</span> 已評論餐廳
  </div>
  <div class="card-body d-flex">
    {{#each comments}}
    <div class="restaurant-image mx-auto">
      <a href="/restaurants/{{ this.Restaurant.id }}">
        <img src="{{ this.Restaurant.image }}" alt="" class="rounded mx-auto" style="width: 75px; height: 75px;">
      </a>
    </div>
    {{/each}}
  </div>
</div>