<div class="row my-5">
  <div class="col-9 col-md-6 col-lg-4 m-auto">
    <div class="card card-body text-center" style="height: 30rem">
      <img src="{{ user.image }}" alt="" class="border rounded-circle mx-auto m-0" style="width: 150px; height: 150px; padding: 1rem">
      <h1 class="mt-3">{{ user.name }}</h1>
      <div>{{ user.email }}</div>
      <a href="/users/{{ user.id }}/edit" class="btn btn-primary mt-5">Edit</a>
    </div>
  </div>
</div>