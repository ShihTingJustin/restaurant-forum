<h1>餐廳後台</h1>
<div class="d-flex justify-content-between align-items-center">
  <div class="d-flex">
    <a href="/admin/restaurants">Restaurants</a>
    <div class="mx-2">|</div>
    <a href="/admin/users">Users</a>
  </div>
  <div>
    <a href='/admin/restaurants/create'>
      <button type="button" class="btn btn-primary">New Restaurant</button>
    </a>
  </div>
</div>
<br />
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">email</th>
      <th scope="col">Role</th>
      <th scope="col">Authority Setting</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{ this.email }}</td>
      <td>{{#if this.isAdmin}}admin{{else}}user{{/if}}</td>
      <td>
        <form action="/admin/users/{{this.id}}?_method=PUT" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link authority-switch-{{#if this.isAdmin}}user{{else}}admin{{/if}}">set
            as {{#if this.isAdmin}}user{{else}}admin{{/if}}</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>