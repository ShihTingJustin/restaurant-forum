<h1>餐廳後台</h1>
<div>
  <div class="d-flex">
    <a href="/admin/restaurants">Restaurants</a>
    <div class="mx-2">|</div>
    <a {{#if categories }}class="font-weight-bold" {{/if}} href="/admin/categories">Categories</a>
    <div class="mx-2">|</div>
    <a href="/admin/users">Users</a>
  </div>
  <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded shadow-sm">
    {{#if category}}
    <form action="/admin/categories/{{ category.id }}?_method=PUT" method="POST">
      <input type="text" placeholder="name" name="name" value="{{ category.name }}">
      <button type="submit">Update</button>
      <a href="/admin/categories">or Create New</a>
    </form>
    {{else}}
    <form action="/admin/categories" method="POST">
      <input type="text" placeholder="name" name="name">
      <button type="submit">Submit</button>
    </form>
    {{/if}}
  </div>
</div>
<br />

<table class="table text-center">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Category Name</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each categories}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>
        <button type="button" class="btn btn-link">
          <a href="/admin/categories/{{ this.id }}/edit">
            Edit
          </a>
        </button>
        <form action="/admin/categories/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>